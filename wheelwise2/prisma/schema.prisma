// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Leads {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  phone     String
  email     String // assuming email should be unique
  status    LeadStatus @default(OPEN)
  createdAt DateTime   @default(now()) // automatically set to the current date and time
  updatedAt DateTime   @updatedAt // automatically updated to the current date and time when the record is updated
}

enum LeadStatus {
  OPEN
  IN_PROCESS
  CLOSED
}
